<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width,initial-scale=1.0">
		<title>MessUp</title>
		<link href="assets/stylesheets/bootstrap.min.css" rel="stylesheet">
		<!--<script type="text/javascript" src="assets/javascripts/respond.js"></script>-->
	</head>
	<body>
		<%= render(:partial => "navigation_with_log_out")%>
		<div class="container" style = "margin-top: 50px">
			<div class="well">
				<h1>
		  	Edit your data here...
				</h1>
				<div>
					<%= form_for(:user, :url => {:action => 'update', :id => @user.id}, :class => ('action update')) do |f|%>
						<center>
							<table class="table table-striped table-hover">	
									<tr>
										<th>First Name :</th>
										<td><%= f.text_field(:firstname)%></td>
									</tr>
									<tr>
										<th>Last Name :</th>
										<td><%= f.text_field(:lastname)%></td>
									</tr>
									<tr>
										<th>email :</th>
										<td><%= f.email_field(:email)%></td>
									</tr>
									<tr>
										<th>Institution :</th>
										<td><%= f.text_field(:institution)%></td>
									</tr>
							</table>
								<%= button_to("Save", {:action => 'update'}, :method => :post, :class => 'button',:style =>'color:#fff;background-color:#428bca;padding: 5px; padding-left: 10px; padding-right: 10px')%>
						</center>
					<% end %>
					<!--<% @users = UserData.all %>-->
					<%= link_to("<<Back",{:action => 'index'}, :class => 'action index')%>
				</div>
			</div>
		</div>      
	</body>
	</html>
