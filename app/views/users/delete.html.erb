<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width,initial-scale=1.0">
		<title>MessUp</title>
		<link href="assets/stylesheets/bootstrap.min.css" rel="stylesheet">
		<!--<script type="text/javascript" src="assets/javascripts/respond.js"></script>-->
	</head>
	<body>
		<%= render(:partial => "navigation_with_log_out")%>
		<div class="container" style = "margin-top: 50px">
			<div class="well">
				<div class = "Subjects Delete">
					<h2>Delete Subject</h2>
					<%= form_for(:user, :url => { :action => 'destroy', :id => @user.id}) do |f|%>
					<p>Are you sure to delete the data...</p>
					<p class = "reference-name"><%= @user.firstname%></p>
					<div class = "form-buttons">
						<%= f.submit("Delete Subject")%>
					</div>
					<% end %>
					<%= link_to("<<Back to Index",{:action => 'index'})%>
				</div>
			</div>
		</div>
	</body>
</html>