				<!--<form accept-charset="UTF-8" action="/users/sign_in" class="simple_form form-horizontal" id="new_user" method="post" novalidate="novalidate" role="form">-->
				<%= form_for(:user, :url => {:action => 'validate'}, :class => 'action validate') do %>
					<!--<div style="margin:0;padding:0;display:inline">
						<input name="utf8" type="hidden" value="&#x2713;" /><input name="authenticity_token" type="hidden" value="HiKFZQd9ep/NVitsTEBawY1MSN6LAI1N/kKqG2ZfOCw=" />
